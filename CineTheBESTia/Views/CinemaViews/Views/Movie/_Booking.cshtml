@model MovieViewModel

    <form asp-action="SearchSeats" method="post" enctype="multipart/form-data">
        @Html.HiddenFor(x => x.MovieSelect.Id)
        @Html.HiddenFor(x => x.MovieSelect.original_title)
        @Html.HiddenFor(x => x.MovieSelect.original_language)
        @Html.HiddenFor(x => x.MovieSelect.vote_average)
        @Html.HiddenFor(x => x.MovieSelect.overview)
        @Html.HiddenFor(x => x.MovieSelect.release_date)
        @Html.HiddenFor(x => x.MovieSelect.image)
        @Html.HiddenFor(x => x.MovieSelect.video)
        @Html.HiddenFor(x => x.MovieSelect.vote_count)
        @Html.HiddenFor(x => x.MovieSelect.title)
        @Html.HiddenFor(x => x.MovieSelect.popularity)
        @Html.HiddenFor(x => x.MovieSelect.poster_path)
        @Html.HiddenFor(x => x.MovieSelect.backdrop_path)
        @Html.HiddenFor(x => x.MovieSelect.adult)
        @Html.HiddenFor(x => x.MovieSelect.Photo_Link)
        

        <div class="form-group" align="right">
            <table>
                <tr>
                    <td style="padding-left: 5px; padding-right: 5px; vertical-align:central;">
                        <label asp-for="MovieSelect.original_title" align="center">Select Date To verify Functions</label>
                    </td>
                    <td style="padding-left: 5px; padding-right: 5px; vertical-align:central;">
                        @Html.DropDownListFor(model => model.Function, Model.FunctionList)
                    </td>
                    <td style="padding-left: 5px; padding-right: 5px; vertical-align:central;">
                        <button class="btn btn-success" type="submit">
                            Reservar
                        </button>
                    </td>
                </tr>
            </table>

        </div>
    </form>

