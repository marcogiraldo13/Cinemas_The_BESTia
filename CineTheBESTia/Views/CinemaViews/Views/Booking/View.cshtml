@model IEnumerable<Domain.Booking>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
<table border="1" width="500" height="100">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.booking_cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.booking_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.functionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movieId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.booking_cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.booking_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.functionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.movieId)
            </td>
            <td>
                <a asp-action="Delete" asp-controller="Booking" asp-route-id = "@item.Id">Booking Cancel</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
